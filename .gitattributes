# Auto detect text files and perform LF normalization
* text=auto

# Dart files
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf

# SQL
*.sql text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Gradle
*.gradle text eol=lf
gradlew text eol=lf
gradlew.bat text eol=crlf

# iOS/Swift
*.swift text eol=lf
*.pbxproj text eol=lf
*.xcconfig text eol=lf
*.plist text eol=lf
Podfile text eol=lf

# Android
*.xml text eol=lf
*.properties text eol=lf
*.pro text eol=lf

